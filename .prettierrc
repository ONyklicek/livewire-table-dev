{
	"singleQuote": true,
	"trailingComma": "all",
	"printWidth": 80,
	"tabWidth": 4,
	"endOfLine": "lf",
	"plugins": [
		"@prettier/plugin-php",
		"prettier-plugin-blade",
		"prettier-plugin-tailwindcss"
	],
	"overrides": [
		{
			"files": [
				"*.blade.php"
			],
			"options": {
				"parser": "blade"
			}
		}
	]
}
