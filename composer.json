{
    "name": "nyoncode/livewire-table",
    "description": "Livewire table",
    "authors": [
        {
            "name": "Ondřej Nyklíček",
            "email": "ondrej@nyoncode.cz",
            "role": "Developer"
        }
    ],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "nyoncode/laravel-package-toolkit": "^1.0",
	    "illuminate/collections": "^11.0|^12.0",
	    "illuminate/support": "^11.0|^12.0",
	    "illuminate/pagination": "^11.0|^12.0",
	    "illuminate/view": "^11.0|^12.0",
        "livewire/livewire": "^3.0"
    },
	"require-dev": {
		"laravel/pint": "^1.25",
        "pestphp/pest": "^4.1"
	},
    "autoload": {
        "psr-4": {
            "NyonCode\\LivewireTable\\": "src"
        }
    },
	"autoload-dev": {
		"psr-4": {
			"NyonCode\\LivewireTable\\Tests\\": "tests"
		},
		"files": ["_helpers.php"]
	},
    "extra": {
        "laravel": {
            "providers": [
                "NyonCode\\LivewireTable\\Providers\\LivewireTableServiceProvider"
            ]
        }
    },
	"scripts": {
		"test": "vendor/bin/phpunit",
		"test-coverage": "vendor/bin/phpunit --coverage-html coverage",
		"pint" : "./vendor/bin/pint"
	},
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
